{
  "name": "@qcrypt/qcrypt-client",
  "version": "6.1.1",
  "type": "module",
  "copyright": "© 2024–2026 Quick Crypt Contributors",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve --hmr false --host 0.0.0.0 --watch --poll 1000 --ssl --ssl-cert localssl/localhost.crt --ssl-key localssl/localhost.key",
    "build": "ng build qcrypt  --configuration production --subresource-integrity",
    "karma": "ng test --watch --poll 1000 ",
    "test": "NODE_EXTRA_CA_CERTS=./localssl/qcrypt.pem npx playwright test --project=\"unit chrome\" tests/unit.spec.ts",
    "test:all": "NODE_EXTRA_CA_CERTS=./localssl/qcrypt.pem npx playwright test --project=\"unit chrome\" --project=\"unit firefox\" --workers=1 tests/unit.spec.ts",
    "test:e2e": "NODE_EXTRA_CA_CERTS=./localssl/qcrypt.pem npx playwright test --project=local --workers=1 tests/sequential && npx playwright test --project=local tests/parallel --grep-invert \"/@fullfuzz/\"",
    "test:fuzz": "NODE_EXTRA_CA_CERTS=./localssl/qcrypt.pem npx playwright test --project=local tests/parallel --grep \"/@fullfuzz/\"",
    "test:e2e:prod": "npx playwright test --project=prod --workers=1 tests/sequential && npx playwright test --project=prod tests/parallel --grep-invert \"/@fullfuzz/\"",
    "test:fuzz:prod": "npx playwright test --project=prod tests/parallel --grep \"/@fullfuzz/\"",
    "serve:ssr:qcrypt": "node dist/qcrypt/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.16",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.16",
    "@angular/compiler": "^20.3.16",
    "@angular/core": "^20.3.16",
    "@angular/forms": "^20.3.16",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.16",
    "@angular/platform-browser-dynamic": "^20.3.16",
    "@angular/platform-server": "^20.3.16",
    "@angular/router": "^20.3.16",
    "@angular/ssr": "^20.3.14",
    "@scure/bip39": "^2.0.1",
    "@simplewebauthn/browser": "^13.0.0",
    "@zxcvbn-ts/core": "^3.0.4",
    "@zxcvbn-ts/language-common": "^3.0.4",
    "@zxcvbn-ts/language-en": "^3.0.2",
    "@zxcvbn-ts/language-es-es": "^3.0.2",
    "@zxcvbn-ts/matcher-pwned": "^3.0.4",
    "libsodium-wrappers": "^0.8.0",
    "luxon": "^3.6.2",
    "rxjs": "~7.8.0",
    "tar": "^7.5.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.14",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^20.3.16",
    "@playwright/test": "^1.55.1",
    "@types/express": "^5.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.10.7",
    "devtools-protocol": "^0.0.1551306",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "schematics-scss-migrate": "^2.3.17",
    "tsx": "^4.20.0",
    "typescript": "~5.9.0"
  }
}
