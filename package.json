{
  "name": "@qcrypt/qcrypt-client",
  "version": "5.2.2",
  "type": "module",
  "copyright": "© 2024–2025 Quick Crypt Contributors",
  "scripts": {
    "ng": "ng",
    "setup": "./localssl/localssl.sh",
    "serve": "ng serve --hmr false --host $(ip route get 1.1.1.1 | awk '{print $7}') --watch --poll 1000 --ssl --ssl-cert localssl/localhost.crt --ssl-key localssl/localhost.key",
    "build": "ng build qcrypt  --configuration production --subresource-integrity",
    "karma": "ng test --watch --poll 1000 ",
    "test": "NODE_EXTRA_CA_CERTS=./localssl/ca.pem npx playwright test --project=\"unit chrome\" tests/unit.spec.ts",
    "test:all": "NODE_EXTRA_CA_CERTS=./localssl/ca.pem npx playwright test --project=\"unit chrome\" --project=\"unit firefox\" tests/unit.spec.ts",
    "test:e2e": "NODE_EXTRA_CA_CERTS=./localssl/ca.pem npx playwright test --project=local --workers=1 tests/sequential && npx playwright test --project=local tests/parallel",
    "test:e2e:prod": "npx playwright test --project=prod --workers=1 tests/sequential && npx playwright test --project=prod tests/parallel",
    "serve:ssr:qcrypt": "node dist/qcrypt/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/cdk": "^20.2.5",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/material": "^20.2.5",
    "@angular/platform-browser": "^20.3.2",
    "@angular/platform-browser-dynamic": "^20.3.2",
    "@angular/platform-server": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@angular/ssr": "^20.3.3",
    "@scure/bip39": "^2.0.1",
    "@simplewebauthn/browser": "^13.0.0",
    "@zxcvbn-ts/core": "^3.0.4",
    "@zxcvbn-ts/language-common": "^3.0.4",
    "@zxcvbn-ts/language-en": "^3.0.2",
    "@zxcvbn-ts/language-es-es": "^3.0.2",
    "@zxcvbn-ts/matcher-pwned": "^3.0.4",
    "libsodium-wrappers": "^0.7.15",
    "luxon": "^3.4.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.2",
    "@playwright/test": "^1.55.1",
    "@types/express": "^5.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/libsodium-wrappers": "^0.7.13",
    "@types/luxon": "^3.4.2",
    "@types/node": "^24.0.0",
    "devtools-protocol": "^0.0.1521046",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "schematics-scss-migrate": "^2.3.17",
    "tsx": "^4.20.0",
    "typescript": "~5.9.0"
  }
}
